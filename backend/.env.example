# ============================================================
#  BryteLinks Backend — Environment Variables
# ============================================================
#  Copy this file to .env (dev) or .env.production (deploy)
#  and fill in the values for your environment.
#
#  Only variables actively used by the codebase are listed.
# ============================================================

NODE_ENV=development          # development | production
PORT=5050

# ── Database ─────────────────────────────────────────────────
DBURI=                        # MongoDB connection string

# ── Auth / JWT ───────────────────────────────────────────────
JWTSECRET=                    # Access-token signing secret
REFRESH_TOKEN_SECRET=         # Refresh-token signing secret

# ── Frontend URL (CORS allow-list & email links) ────────────
FRONTEND_URL=http://localhost:5173

# ── Email ────────────────────────────────────────────────────
EMAIL_USER=                   # Sender address (Gmail, etc.)
EMAIL_PASSWORD=               # App-password or SMTP password

# ── VAPID Keys — Push Notifications ─────────────────────────
#  Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=

# ── Redis ────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000
REDIS_DEFAULT_TTL=3600        # Default cache TTL in seconds
REDIS_CACHE_PREFIX=brytelinks:

# ── Provider API Keys ────────────────────────────────────────
MTN_API_KEY=
AIRTELTIGO_API_KEY=
TELECEL_API_KEY=
API_ENDPOINT=                 # External telecom API base URL

# ── WhatsApp Notifications (optional) ────────────────────────
WHATSAPP_API_URL=
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ── Misc (optional) ─────────────────────────────────────────
# APP_VERSION=1.0.0           # Shown in system info endpoint
# FORCE_NO_TRANSACTIONS=false # Skip DB transactions (debug only)